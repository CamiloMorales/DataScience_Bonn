    "def convert_one_hot_encoding(y, number_of_classes):\n",
    "    oneHot = np.zeros([y.shape[0], number_of_classes])\n",
    "    for idx, l in enumerate(y):\n",
    "        oneHot[idx, l] = 1\n",
    "    return oneHot"
   ]
